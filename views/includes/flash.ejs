<% if(success && success.length) { %>
<div
  class="alert alert-success alert-dismissible fade show col-8 offset-2"
  role="alert"
>
  <i class="fa-solid fa-circle-check success"></i> &nbsp;&nbsp; <%= success %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %> <% if(error && error.length) { %>
<div
  class="alert alert-danger alert-dismissible fade show col-8 offset-2"
  role="alert"
>
  <i class="fa-solid fa-circle-xmark success"></i> &nbsp;&nbsp; <%= error %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %>
