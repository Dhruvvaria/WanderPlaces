<% layout("layouts/boilerplate") %>

<div class="row">
  <div class="col-8 offset-2">
    <br /><br />
    <h3 class="mb-3">Add New Hotel</h3>
    <form action="/listings" method="POST" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="title" class="form-label">Title :</label>
        <input
          type="text"
          name="listing[title]"
          class="form-control"
          placeholder="Enter Title"
          required
        />
        <div class="invalid-feedback">Please Enter Title.</div>
      </div>
      <div class="mb-3">
        <label for="description" class="form-label">Description :</label>
        <textarea
          type="text"
          name="listing[description]"
          class="form-control"
          rows="5"
          placeholder="Enter Description"
          required
        ></textarea>
        <div class="invalid-feedback">Please provide Description.</div>
      </div>
      <div class="mb-3">
        <label for="image" class="form-label">Image :</label>
        <input
          type="text"
          name="listing[image]"
          class="form-control"
          placeholder="Select Image "
        />
      </div>
      <div class="row">
        <div class="mb-3 col-md-3">
          <label for="price " class="form-label">Price :</label>
          <input
            type="number"
            name="listing[price]"
            class="form-control"
            placeholder="Enter Price"
            required
          />
          <div class="invalid-feedback">Enter Price.</div>
        </div>
        <div class="mb-3 col-md-2">
          <label for="days " class="form-label">Days :</label>
          <input
            type="number"
            name="listing[days]"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Enter Days.</div>
        </div>
        <div class="mb-3 col-md-2">
          <label for="price " class="form-label">Nights :</label>
          <input
            type="number"
            name="listing[nights]"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Enter Nights.</div>
        </div>
        <div class="mb-3 col-md-5">
          <label for="country" class="form-label">Country :</label>
          <input
            type="text"
            name="listing[country]"
            class="form-control"
            placeholder="Enter Country"
            required
          />
          <div class="invalid-feedback">Please provide a Country.</div>
        </div>
      </div>

      <div class="mb-3">
        <label for="location" class="form-label">Location :</label>
        <input
          type="text"
          name="listing[location]"
          class="form-control"
          placeholder="Enter Location"
          required
        />
        <div class="invalid-feedback">Please provide a valid city.</div>
      </div>

      <button class="btn btn-dark mb-5 mt-3">Submit</button>
    </form>
  </div>
</div>
