<% layout("layouts/boilerplate") %>

<div class="filters">
  <div class="filter-container">
    <div class="left-btn slider-btns">
      <i class="fa-solid fa-chevron-left"></i>
    </div>
    <div class="filter-option">
      <div class="filter">
        <i class="fa-solid fa-fire"></i>
        <p>Trending</p>
      </div>
      <div class="filter">
        <i class="fa-solid fa-mountain"></i>
        <p>Mountains</p>
      </div>
      <div class="filter">
        <i class="fa-solid fa-umbrella-beach"></i>
        <p>Beaches</p>
      </div>
      <div class="filter">
        <i class="fa-brands fa-fort-awesome"></i>
        <p>Castles</p>
      </div>
      <div class="filter">
        <i class="fa-solid fa-gopuram"></i>
        <p>Temples</p>
      </div>
      <div class="filter">
        <i class="fa-solid fa-archway"></i>
        <p>Caves</p>
      </div>
      <div class="filter">
        <i class="fa-solid fa-binoculars"></i>
        <p>Amazing views</p>
      </div>
      <div class="filter">
        <i class="fa-regular fa-snowflake"></i>
        <p>Arctic</p>
      </div>
      <div class="filter">
        <i class="fa-solid fa-ship"></i>
        <p>Boats</p>
      </div>
      <div class="filter">
        <i class="fa-solid fa-tower-observation"></i>
        <p>Towers</p>
      </div>
      <div class="filter">
        <i class="fa-solid fa-binoculars"></i>
        <p>Amazing views</p>
      </div>
      <div class="filter">
        <i class="fa-regular fa-snowflake"></i>
        <p>Arctic</p>
      </div>
      <div class="filter">
        <i class="fa-solid fa-ship"></i>
        <p>Boats</p>
      </div>
      <div class="filter">
        <i class="fa-solid fa-tower-observation"></i>
        <p>Towers</p>
      </div>
    </div>
    <div class="right-btn slider-btns">
      <i class="fa-solid fa-chevron-right"></i>
    </div>
  </div>

  <div class="listing-locations">
    <select name="listing-locations" class="form-select">
      <option selected>All</option>
      <option value="1">India</option>
      <option value="2">Europe</option>
      <option value="3">UAE</option>
      <option value="4">UK</option>
      <option value="5">USA</option>
    </select>
  </div>
  <div class="tax-filter">
    <div class="form-check-reverse form-switch">
      <input
        class="form-check-input"
        type="checkbox"
        role="switch"
        id="flexSwitchCheckDefault" />
      <label class="form-check-label" for="flexSwitchCheckDefault"
        >Display total after taxes</label
      >
    </div>
  </div>
</div>
<div class="row row-cols-lg-3 row-cols-md-2">
  <% for ( let listing of allListings) { %>
  <a href="/listings/<%= listing._id %>" class="listing-link">
    <div class="card listing-card">
      <img
        src="<%= listing.image %>"
        class="card-img-top"
        alt="Listing Image" />
      <div class="card-img-overlay"></div>
      <div class="card-body">
        <h5 class="card-title"><b><%= listing.title %></b></h5>
        <p class="card-text">
          &#8377;<%= listing.price.toLocaleString("en-IN") %> (<%= listing.days
          %> D / <%= listing.nights %> N)
          <i class="tax-ammount">&nbsp;&nbsp; +18% GST </i>
        </p>
      </div>
    </div>
  </a>
  <% } %>
</div>
